{
  "compilerOptions": {
    "removeComments": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "src",
    "lib": [
      "es2015",
      "es2016.array.include"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*-test-util.ts"
  ]
}